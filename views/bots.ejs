          document.getElementById('searchBotBtn').innerHTML = `<span class="spinner-grow spinner-grow-sm me-2" role="status" aria-hidden="true"><span class="visually-hidden">Szukanie</span></span>Szukanie...`;
          fetch("/bots/find/" + searchBot, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
          }).then(res => res.json()).then(data => {
            if (data.error == false) {
              document.getElementById('searchBotBtn').innerHTML = 'Search';
              document.getElementById('foundBot').innerHTML = '';
              data.bots.map(a => {
                document.getElementById('foundBot').innerHTML += `
