<!DOCTYPE html>
<html lang="en">

<meta http-equiv="content-type" content="text/html;charset=utf-8" />

<%- include('../partials/head') %>

<body>
  <%- include('../partials/spinner') %>
  <main class="page-wrapper border-bottom">
    <%- include('../partials/header') %>

    <section class="container pt-5">
      <div class="row">

        <!-- Sidebar (User info + Account menu) -->
        <%- include('partials/aside') %>

        <div class="col-md-8 offset-lg-1 pb-5 mb-2 mb-lg-4 pt-md-5 mt-n3 mt-md-0">
          <div class="ps-md-3 ps-lg-0 mt-md-2 pt-md-4 pb-md-2">
            <h1 class="h2 pt-xl-1 mb-3 pb-2 pb-lg-3">Opinie</h1>
            <h2 class="h5 text-primary mb-4">Lista wszystkich twoich opinii.</h2>

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-4" id="reviewsTabs" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active text-white" id="bots-tab" data-bs-toggle="tab" data-bs-target="#bots" type="button" role="tab">Boty (<%= bots.filter(b => b.rates.some(r => r.author == user.id)).length %>)</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link text-white" id="servers-tab" data-bs-toggle="tab" data-bs-target="#servers" type="button" role="tab">Serwery (<%= servers.filter(s => s.rates.some(r => r.author == user.id)).length %>)</button>
              </li>
			    <li class="nav-item" role="presentation">
    <button class="nav-link text-white" id="replies-tab" data-bs-toggle="tab" data-bs-target="#replies" type="button" role="tab">Odpowiedzi (<%= replyCount %>)</button>
  </li>
            </ul>

            <!-- Tab content -->
            <div class="tab-content" id="reviewsTabsContent">
              <!-- Bot reviews -->
              <div class="tab-pane fade show active" id="bots" role="tabpanel">
                <% if (bots.filter(b => b.rates.some(r => r.author == user.id)).length > 0) { %>
                  <% bots.forEach(a => { %>
                    <% const userComment = a.rates.find(c => c.author == user.id); %>
                    <% if (userComment) { %>
                      <div class="card d-sm-flex flex-sm-row align-items-sm-center justify-content-between border-0 shadow-sm p-3 p-md-4 mb-4" id="comment-bot-<%= userComment.id %>">
                        <div class="d-flex align-items-center pe-sm-3">
                          <img src="<%= global.client.users.cache.get(a.botID)?.displayAvatarURL() || 'https://cdn.discordapp.com/embed/avatars/0.png' %>" width="84" alt="Avatar" class="rounded-circle">
                          <div class="ps-3 ps-sm-4">
                            <h6 class="fw-semibold lh-base mb-0">
                              <span class="fw-semibold me-2 mb-2">
                                <%= a.username %>
                              </span>
                              <span class="badge bg-faded-primary text-primary">Bot</span>
                              <% if (a.Date > Date.now() - 604800000) { %>
                              <span class="badge bg-faded-success text-success me-2 mb-2">NOWY!</span>
                              <% } %>
                            </h6>
                            <div class="fs-sm mt-2">
                              <%= userComment.message %>
                            </div>
                            <div class="mt-2">
                              <% for (let i = 0; i < 5; i++) { %>
                                <i class="bx bxs-star text-warning<%= i >= userComment.star_rate ? '-half' : '' %>"></i>
                              <% } %>
                            </div>
                          </div>
                        </div>
<div class="d-flex justify-content-end pt-3 pt-sm-0">
  <a href="/bot/<%= a.botID %>" class="btn btn-outline-secondary px-3 px-xl-4">
    <i class="bx bx-link-alt fs-xl me-lg-1 me-xl-2"></i>
    <span class="d-none d-lg-inline">Zobacz</span>
  </a>
  <button type="button" class="btn btn-outline-danger px-3 px-xl-4 ms-2 delete-comment" 
          data-comment-id="<%= userComment.id %>" 
          data-bot-id="<%= a.botID %>"
          data-type="bot">
    <i class="bx bx-trash-alt fs-xl me-lg-1 me-xl-2"></i>
    <span class="d-none d-lg-inline">Usuń</span>
  </button> 
</div>

                      </div>
                    <% } %>
                  <% }) %>
                <% } else { %>
                  <div class="card d-sm-flex flex-sm-row align-items-sm-center justify-content-between border-0 shadow-sm p-3 p-md-4 mb-4">
                    <div class="d-flex align-items-center pe-sm-3">
                      <div class="ps-3 ps-sm-4">
                        <h6 class="fw-semibold lh-base mb-0">
                          <span class="fw-semibold me-2 mb-2">
                            Nie oceniłeś jeszcze żadnych botów!
                          </span>
                        </h6>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>

<!-- Server reviews -->
<div class="tab-pane fade" id="servers" role="tabpanel">
    <% if (servers.filter(s => s.rates.some(r => r.author == user.id)).length > 0) { %>
        <% servers.forEach(s => { %>
            <% const userComment = s.rates.find(c => c.author == user.id); %>
            <% if (userComment) { %>
                <div class="card d-sm-flex flex-sm-row align-items-sm-center justify-content-between border-0 shadow-sm p-3 p-md-4 mb-4" id="comment-server-<%= userComment.id %>">
                    <div class="d-flex align-items-center pe-sm-3">
                        <img src="<%= s.serverIcon ? `https://cdn.discordapp.com/icons/${s.serverID}/${s.serverIcon}.${s.serverIcon.startsWith('a_') ? 'gif' : 'png'}` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" 
                             width="84" 
                             alt="Avatar" 
                             class="rounded-circle"
                             onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                        <div class="ps-3 ps-sm-4">
                            <h6 class="fw-semibold lh-base mb-0">
                                <span class="fw-semibold me-2 mb-2">
                                    <%= s.serverName || `Serwer ${s.serverID}` %>
                                </span>
                                <span class="badge bg-faded-info text-info">Serwer</span>
                                <% if (s.Date > Date.now() - 604800000) { %>
                                <span class="badge bg-faded-success text-success me-2 mb-2">NOWY!</span>
                                <% } %>
                            </h6>
                            <div class="fs-sm mt-2">
                                <%= userComment.message %>
                            </div>
                            <div class="mt-2">
                                <% for (let i = 0; i < 5; i++) { %>
                                    <i class="bx bxs-star text-warning<%= i >= userComment.star_rate ? '-half' : '' %>"></i>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end pt-3 pt-sm-0">
                        <a href="/server/<%= s.serverID %>" class="btn btn-outline-secondary px-3 px-xl-4">
                            <i class="bx bx-link-alt fs-xl me-lg-1 me-xl-2"></i>
                            <span class="d-none d-lg-inline">Zobacz</span>
                        </a>
                        <button type="button" class="btn btn-outline-danger px-3 px-xl-4 ms-2 delete-comment" 
                                data-comment-id="<%= userComment.id %>" 
                                data-server-id="<%= s.serverID %>"
                                data-type="server">
                            <i class="bx bx-trash-alt fs-xl me-lg-1 me-xl-2"></i>
                            <span class="d-none d-lg-inline">Usuń</span>
                        </button> 
                    </div>
                </div>
            <% } %>
        <% }) %>
    <% } else { %>
        <div class="card d-sm-flex flex-sm-row align-items-sm-center justify-content-between border-0 shadow-sm p-3 p-md-4 mb-4">
            <div class="d-flex align-items-center pe-sm-3">
                <div class="ps-3 ps-sm-4">
                    <h6 class="fw-semibold lh-base mb-0">
                        <span class="fw-semibold me-2 mb-2">
                            Nie oceniłeś jeszcze żadnych serwerów!
                        </span>
                    </h6>
                </div>
            </div>
        </div>
    <% } %>
</div>

<!-- Nowy panel z odpowiedziami -->
<div class="tab-pane fade" id="replies" role="tabpanel">
  <% if (replies.length > 0) { %>
    <% replies.forEach(reply => { %>
      <div class="card d-sm-flex flex-sm-row align-items-sm-center justify-content-between border-0 shadow-sm p-3 p-md-4 mb-4" id="reply-<%= reply.replyId %>">
        <div class="d-flex align-items-center pe-sm-3">
          <img src="<%= member.avatar ? member.avatarURL({ format: 'png', size: 512 }) : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" 
               width="84" 
               alt="Avatar" 
               class="rounded-circle"
               onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
          <div class="ps-3 ps-sm-4">
            <h6 class="fw-semibold lh-base mb-0 d-flex align-items-center">
              <span class="fw-semibold me-2">
                <%= reply.authorName || 'Ty' %>
              </span>
            </h6>
            <div class="fs-sm mt-2">
              <%= reply.message %>
            </div>
            <div class="d-flex align-items-center mt-2">
              <span class="badge bg-faded-<%= reply.type === 'bot' ? 'primary' : 'info' %> text-<%= reply.type === 'bot' ? 'primary' : 'info' %> me-2">
                <%= reply.type === 'bot' ? 'Bot' : 'Serwer' %>
              </span>
              <a href="/<%= reply.type %>/<%= reply.parentId %>" class="text-decoration-none">
                <%= reply.parentName || reply.parentId %>
              </a>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end pt-3 pt-sm-0">
          <button type="button" class="btn btn-outline-danger px-3 px-xl-4 ms-2" 
                  onclick="deleteReply('<%= reply.parentId %>', '<%= reply.commentId %>', '<%= reply.replyId %>', this)">
            <i class="bx bx-trash-alt fs-xl me-lg-1 me-xl-2"></i>
            <span class="d-none d-lg-inline">Usuń</span>
          </button>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="card d-sm-flex flex-sm-row align-items-sm-center justify-content-between border-0 shadow-sm p-3 p-md-4 mb-4">
      <div class="d-flex align-items-center pe-sm-3">
        <div class="ps-3 ps-sm-4">
          <h6 class="fw-semibold lh-base mb-0">
            <span class="fw-semibold me-2">
              Nie dodałeś jeszcze żadnych odpowiedzi!
            </span>
          </h6>
          <p class="text-muted mt-2">Twoje odpowiedzi na komentarze pojawią się tutaj</p>
        </div>
      </div>
    </div>
  <% } %>
</div>

</div>
            </div>

          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Delete Confirmation Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Potwierdzenie usunięcia</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Czy na pewno chcesz usunąć tę opinię? Tej akcji nie można cofnąć.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
          <button type="button" id="confirmDeleteBtn" class="btn btn-danger">
            <i class="bx bx-trash-alt me-1"></i> Usuń
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="border-top border-light">
    <%- include('../partials/footer') %>
  </div>

  <script>
    // Delete comment functionality
    document.querySelectorAll('.delete-comment').forEach(btn => {
      btn.addEventListener('click', function() {
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        const confirmBtn = document.getElementById('confirmDeleteBtn');
        
        // Store data in the confirm button
        confirmBtn.dataset.commentId = this.dataset.commentId;
        confirmBtn.dataset.type = this.dataset.type;
        
        if (this.dataset.type === 'bot') {
          confirmBtn.dataset.botId = this.dataset.botId;
        } else {
          confirmBtn.dataset.serverId = this.dataset.serverId;
        }
        
        deleteModal.show();
      });
    });

    // Confirm delete action
    document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
      const commentId = this.dataset.commentId;
      const type = this.dataset.type;
      const botId = this.dataset.botId;
      const serverId = this.dataset.serverId;
      
      try {
        const response = await fetch(`/profile/${'<%= user.id %>'}/delete-comment`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            commentId: commentId,
            type: type,
            botID: botId,
            serverID: serverId
          })
        });
        
        const result = await response.json();
        
        if (result.error) {
          alert(result.message);
        } else {
          // Remove the comment from UI
          document.getElementById(`comment-${type}-${commentId}`)?.remove();
          
          // Close modal
          bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
          
          // Show success message
          alert('Opinia została pomyślnie usunięta.');
          
          // Update tab counters
          const tabs = document.querySelectorAll('.nav-link');
          tabs.forEach(tab => {
            const target = tab.getAttribute('data-bs-target');
            const count = document.querySelector(`${target} .delete-comment`).length;
            tab.textContent = tab.textContent.replace(/\(\d+\)/, `(${count})`);
          });
          
          // Reload if no comments left
          if (document.querySelectorAll('.delete-comment').length === 0) {
            setTimeout(() => location.reload(), 1000);
          }
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Wystąpił błąd podczas usuwania opinii.');
      }
    });
	    // Funkcja do usuwania odpowiedzi
async function deleteReply(parentId, commentId, replyId, button, type) {
    if (!confirm('Czy na pewno chcesz usunąć tę odpowiedź? Tej akcji nie można cofnąć.')) return;
    
    const originalContent = button.innerHTML;
    button.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Usuwanie...';
    button.disabled = true;
    
    try {
        // Wybierz odpowiedni endpoint w zależności od typu
        const endpoint = type === 'bot' ? '/bots/comment/reply/delete' : '/servers/comment/reply/delete';
        
        const response = await fetch(endpoint, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                [type === 'bot' ? 'botID' : 'serverID']: parentId,
                commentId: commentId,
                replyId: replyId
            })
        });
        
        const result = await response.json();
        
        if (result.error) {
            alert(result.message);
        } else {
            // Animacja usuwania
            const replyElement = document.getElementById(`reply-${replyId}`);
            if (replyElement) {
                replyElement.style.transition = 'all 0.3s ease';
                replyElement.style.opacity = '0';
                replyElement.style.height = '0';
                replyElement.style.margin = '0';
                replyElement.style.padding = '0';
                replyElement.style.overflow = 'hidden';
                
                setTimeout(() => {
                    replyElement.remove();
                    
                    // Aktualizuj licznik odpowiedzi
                    const repliesTab = document.getElementById('replies-tab');
                    if (repliesTab) {
                        const currentCount = parseInt(repliesTab.textContent.match(/\((\d+)\)/)[1]) || 0;
                        repliesTab.textContent = repliesTab.textContent.replace(/\(\d+\)/, `(${currentCount - 1})`);
                    }
                    
                    // Jeśli nie ma więcej odpowiedzi, pokaż komunikat
                    if (document.querySelectorAll('#replies .card').length === 1) {
                        document.getElementById('replies').innerHTML = `
                            <div class="card border-0 shadow-sm p-3 p-md-4 mb-4">
                                <div class="text-center py-4">
                                    <i class="bx bx-message-rounded-error fs-1 text-muted mb-3"></i>
                                    <h5 class="fw-semibold">Nie dodałeś jeszcze żadnych odpowiedzi</h5>
                                    <p class="text-muted">Twoje odpowiedzi na komentarze pojawią się tutaj</p>
                                </div>
                            </div>
                        `;
                    }
                }, 300);
            }
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Wystąpił błąd podczas usuwania odpowiedzi.');
    } finally {
        button.innerHTML = originalContent;
        button.disabled = false;
    }
}
  </script>
  <style>
  .nav-link,
.nav-link.active,
.nav-link:focus,
.nav-link:hover {
  color: white !important;
}
  </style>
  
</body>
</html>