    info: `${serverName} | Polski Serwer Discord ${serverdata.tags?.length ? '„Éª ' + serverdata.tags.slice(0, 2).join(' „Éª ') : ''}`,
    admins: `üë• Zesp√≥≈Ç Administracyjny | ${serverName}`,
