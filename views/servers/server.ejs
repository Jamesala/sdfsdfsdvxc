    : defaultDesc;
  
  const serverIcon = sbot.guilds.cache.get(serverdata.serverID)?.iconURL({ format: 'png', size: 256 }) 
    || 'https://cdn.discordapp.com/embed/avatars/0.png';
  
  // Dynamic titles and descriptions with emoji fallbacks
