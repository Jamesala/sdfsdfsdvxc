      // Toggle content with animation
      if (content.classList.contains('d-none')) {
        content.classList.remove('d-none');
        content.style.maxHeight = '0';
        setTimeout(() => {
          content.style.maxHeight = content.scrollHeight + 'px';
        }, 10);
        setTimeout(() => {
