<style>
  .notifications-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 9999;
    max-width: 380px;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .notification {
    position: relative;
    padding: 18px 20px;
    margin-left: auto;
    border-radius: 14px;
    color: white;
    display: flex;
    align-items: flex-start;
    animation: fadeInUp 0.4s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    opacity: 0;
    transform: translateY(20px);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.18);
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .notification::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255,255,255,0.15), rgba(255,255,255,0.05));
    z-index: -1;
  }
  
  .notification.hide {
    animation: fadeOutRight 0.4s cubic-bezier(0.55, 0.085, 0.68, 0.53) forwards;
  }
  
  .notification.info {
    background: rgba(114, 137, 218, 0.2);
  }
  
  .notification.warning {
    background: rgba(250, 166, 26, 0.2);
  }
  
  .notification.error {
    background: rgba(240, 71, 71, 0.2);
  }
  
  .notification.success {
    background: rgba(67, 181, 129, 0.2);
  }
  
  .notification-icon {
    margin-right: 14px;
    font-size: 1.6rem;
    margin-top: 2px;
    flex-shrink: 0;
    text-shadow: 0 2px 8px rgba(0,0,0,0.2);
  }
  
  .notification.info .notification-icon {
    color: #8fa3ff;
  }
  
  .notification.warning .notification-icon {
    color: #ffd166;
  }
  
  .notification.error .notification-icon {
    color: #ff6b6b;
  }
  
  .notification.success .notification-icon {
    color: #7ae582;
  }
  
  .notification-content {
    flex: 1;
  }
  
  .notification-title {
    font-weight: 600;
    margin-bottom: 6px;
    font-size: 1.05rem;
    letter-spacing: 0.2px;
  }
  
  .notification-message {
    opacity: 0.9;
    font-size: 0.92rem;
    line-height: 1.4;
  }
  
  .notification-close {
    all: unset;
    background: none;
    border: none;
    color: rgba(255,255,255,0.6);
    cursor: pointer;
    font-size: 1rem;
    margin-left: 12px;
    transition: all 0.2s ease;
    padding: 2px;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .notification-close:hover {
    color: white;
    background: rgba(255,255,255,0.15);
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeOutRight {
    to {
      opacity: 0;
      transform: translateX(30px);
    }
  }
  
  .notification:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
  }
  
  .notification-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    width: 100%;
    background: rgba(255,255,255,0.2);
    overflow: hidden;
  }
  
  .notification-progress::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    animation: progress 10s linear forwards;
  }
  
  .notification.info .notification-progress::after {
    background: #8fa3ff;
  }
  
  .notification.warning .notification-progress::after {
    background: #ffd166;
  }
  
  .notification.error .notification-progress::after {
    background: #ff6b6b;
  }
  
  .notification.success .notification-progress::after {
    background: #7ae582;
  }
  
  @keyframes progress {
    from { transform: translateX(-100%); }
    to { transform: translateX(0); }
  }

  /* Ukrywanie na małych ekranach */
  @media (max-width: 768px) {
    .notifications-container {
      display: none;
    }
  }
</style>

<script>
  // Funkcja sprawdzająca czy to urządzenie mobilne
  function isMobileDevice() {
    return window.innerWidth <= 768;
  }

  // Funkcja do ładowania i wyświetlania powiadomień
  async function loadNotifications() {
    try {
      // Nie ładuj powiadomień na mobile
      if (isMobileDevice()) return;
      
      const response = await fetch('/api/notifications/active');
      if (!response.ok) throw new Error('Network response was not ok');
      
      const notifications = await response.json();
      const container = document.getElementById('notifications-container');
      
      notifications.forEach(notif => {
        const notificationEl = document.createElement('div');
        notificationEl.className = `notification ${notif.type}`;
        notificationEl.innerHTML = `
          <i class="${notif.icon} notification-icon"></i>
          <div class="notification-content">
            <div class="notification-title">${notif.title}</div>
            <div class="notification-message">${notif.content}</div>
          </div>
          <button class="notification-close" aria-label="Zamknij" onclick="this.parentElement.classList.add('hide')">
            <i class="fas fa-times"></i>
          </button>
          <div class="notification-progress"></div>
        `;
        
        container.appendChild(notificationEl);
        
        // Automatyczne ukrywanie po 10 sekundach
        setTimeout(() => {
          notificationEl.classList.add('hide');
          setTimeout(() => notificationEl.remove(), 400);
        }, 10000);
      });
    } catch (error) {
      console.error('Error loading notifications:', error);
    }
  }
  
  // Obsługa zmiany rozmiaru okna
  function handleResize() {
    if (isMobileDevice()) {
      const container = document.getElementById('notifications-container');
      if (container) container.style.display = 'none';
    } else {
      const container = document.getElementById('notifications-container');
      if (container) container.style.display = 'flex';
    }
  }

  // Inicjalizacja
  document.addEventListener('DOMContentLoaded', function() {
    loadNotifications();
    window.addEventListener('resize', handleResize);
  });

  // Obsługa kliknięcia poza powiadomieniem
  document.addEventListener('click', function(e) {
    if (!e.target.closest('.notification') && !e.target.closest('#notifications-container')) {
      document.querySelectorAll('.notification').forEach(notif => {
        notif.classList.add('hide');
        setTimeout(() => notif.remove(), 400);
      });
    }
  });
</script>

