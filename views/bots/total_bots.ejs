<body>
  <%- include('../partials/spinner') %>
  <main class="page-wrapper">
    <%- include('../partials/header') %>

    <!-- Hero -->
    <section class="position-relative py-5 border-bottom">

      <div class="container mt-4 mb-lg-5 pt-lg-2 pb-5">
        <div class="align-items-end gy-3 mb-4 pb-lg-3 pb-1">
          <h1 class="mb-2 mb-md-0">Wszystkie Boty</h1>
          <span class="text-muted">Szukaj najlepszych <%= req.params.tag %> botów dla twojego serwera.<strong> <%= bots.length %></strong> botów znaleziono z tagiem <strong><%= req.params.tag %></strong></span>
        </div>

        <div class="input-group mb-4">
          <input class="form-control" type="text" id="searchBot" placeholder="Szukaj bota" aria-label="Szukaj bota">
          <button class="btn btn-secondary" type="button" id="searchBotBtn">Szukaj</button>
        </div>
        <div class="accordion border-bottom" style="margin-bottom: 100px;" id="foundBot"></div>
        <script>
          document.getElementById('searchBotBtn').addEventListener('click', (e) => {
            let searchBot = document.getElementById('searchBot').value;
            if (searchBot == '') return document.getElementById('foundBot').innerHTML = '';
            if (searchBot.length < 3) return document.getElementById('foundBot').innerHTML = '<div class="alert alert-danger" role="alert">Proszę wpisać co najmniej 3 znaki</div>';
            document.getElementById('searchBotBtn').innerHTML = `<span class="spinner-grow spinner-grow-sm me-2" role="status" aria-hidden="true"><span class="visually-hidden">Szukanie</span></span>Szukanie...`;
            fetch("/bots/find/" + searchBot, {
              method: "POST",
              headers: {
                "Content-Type": "application/json"
              }
            }).then(res => res.json()).then(data => {
              if (data.error == false) {
                document.getElementById('searchBotBtn').innerHTML = 'Search';
                document.getElementById('foundBot').innerHTML = '';
                data.bots.map(a => {
                  document.getElementById('foundBot').innerHTML += `
                    <a href="/bot/${a.botID}" style="text-decoration: none; color: inherit">
                      <div class="accordion-item border-0 rounded-3 shadow-sm mb-3" style="padding: 10px;">
                        <figcaption class="card-footer d-flex align-items-center border-0 mt-lg-0" style="padding: 3px;">
                          <img src="${a.avatar}" width="60" class="rounded-circle" alt="${a.username}">
                          <div class="ps-3">
                            <h6 class="fw-semibold lh-base mb-0">
                              ${a.username}
                              <span class="badge bg-faded-warning text-warning mx-1">PRO</span>
                              <span class="badge bg-faded-info text-info me-2 mb-2">Głosów: ${a.votes}</span>
                            </h6>
                            <span class="fs-sm text-muted">${a.shortDesc}</span>
                          </div>
                        </figcaption>
                      </div>
                    </a>`
                })
              } else if (data.error == true) {
                document.getElementById('searchBotBtn').innerHTML = 'Search';
                document.getElementById('foundBot').innerHTML = '';
                document.getElementById('foundBot').innerHTML = '<div class="alert alert-danger" role="alert">' + data.message + '</div>';
              }
            });
          })
        </script>

        <div class="accordition" id="bots">
          <% for (let i = (page - 1) * 10; i < bots.length; i++) {
            if (i === 10 * page) break;
            let a = bots.sort((a, b) => b.votes - a.votes)[i] %>
          <a href="/bot/<%= a.botID %>" style="text-decoration: none; color: inherit">
            <div class="accordion-item border-0 rounded-3 shadow-sm mb-3" style="padding: 10px;">
              <figcaption class="card-footer d-flex align-items-center border-0  mt-lg-0" style="padding: 3px;">
                <img src="<%= bot.users.cache.get(a.botID)?.displayAvatarURL() || 'https://cdn.discordapp.com/embed/avatars/0.png' %>" width="60" class="rounded-circle" alt="<%= a.username %>">
                <div class="ps-3">
                  <h6 class="fw-semibold lh-base mb-0">
                    <span class="fw-semibold me-2 mb-2">
                      <%= a.username %>
                    </span>
                    <% if (bot.guilds.cache.get(config.server.id).members.cache.get(a.botID)?.presence?.status == 'online') { %>
                    <span class="badge bg-faded-success text-success me-2 mb-2">Online</span>&nbsp;|&nbsp;&nbsp;
                    <% } else if (bot.guilds.cache.get(config.server.id).members.cache.get(a.botID)?.presence?.status == 'idle') { %>
                    <span class="badge bg-faded-warning text-warning me-2 mb-2">Bezczynny</span>&nbsp;|&nbsp;&nbsp;
                    <% } else if (bot.guilds.cache.get(config.server.id).members.cache.get(a.botID)?.presence?.status == 'dnd') { %>
                    <span class="badge bg-faded-danger text-danger me-2 mb-2">Nie przeszkadzać</span>&nbsp;|&nbsp;&nbsp;
                    <% } else if (bot.guilds.cache.get(config.server.id).members.cache.get(a.botID)?.presence?.status == 'offline') { %>
                    <span class="badge bg-faded-light text-secondary me-2 mb-2">Offline</span>&nbsp;|&nbsp;&nbsp;
                    <% } else { %>
                    <span class="badge bg-faded-light text-secondary me-2 mb-2">Offline</span>&nbsp;|&nbsp;&nbsp;
                    <% } %>
                    <% if (a.promote == true) { %>
                    <span class="badge bg-faded-warning text-warning me-2 mb-2">PRO</span>
                    <% } %>
                    <% if (a.Date > Date.now() - 604800000) { %>
                    <span class="badge bg-faded-success text-success me-2 mb-2">NOWY!</span>
                    <% } %>
                    <span class="badge bg-faded-info text-info me-2 mb-2">Głosów: <%= a.votes.toLocaleString() %></span>
                    <% a.tags.slice(0, 3).map(t => { %>
                    <span class="badge bg-secondary me-2 mb-2"><%= t %></span>
                    <% }) %>
                    <% if (a.tags.length > 3) { %>
                    <span class="badge bg-secondary me-2 mb-2"><i class="bx bx-plus-circle"></i> <%= a.tags.length - 3 %> więcej</span>
                    <% } %>
                  </h6>
                  <span class="fs-sm text-muted"><%= a.shortDesc %></span>
                </div>
              </figcaption>
            </div>
          </a>
          <% } %>
        </div>

        <nav aria-label="Page navigation">
          <ul class="pagination mb-4" style="justify-content: center">

            <% if (page != 1) {%>
            <li class="page-item">
              <a href="/allbots/<%= req.params.tag %>?page=0 %>" class="page-link"><i class="bx bx-chevrons-left ms-n1 me-1"></i></a>
            </li>
            <% } else { %>
            <% if (page > 1) { %>
            <li class="page-item disabled">
              <a class="page-link"><i class="bx bx-chevrons-left ms-n1 me-1"></i></a>
            </li>
            <% } %>
            <% } %>

            <% if (page > 1) { %>
            <li class="page-item">
              <a class="page-link" href="/allbots/<%= req.params.tag %>?<%= page - 1 %>" aria-label="Previous"><i class="bx bx-chevron-left"></i></a>
            </li>
            <% } %>

            <% if (page > 1) { %>
            <li class="page-item">
              <a href="/allbots/<%= req.params.tag %>?page=<%= page - 1 %>" class="page-link">
                <%= page - 1 %>
              </a>
            </li>
            <% } %>
            <li class="page-item d-none d-sm-block disabled">
              <a href="#" class="page-link"><%= page %></a>
            </li>
            <% if (page != Math.ceil(bots.length / 10) && bots.length > 0) { %>
            <li class="page-item d-none d-sm-block">
              <a href="/allbots/<%= req.params.tag %>?page=<%= Number(page)+ Number(1); %>" class="page-link"><%= Number(page)+ Number(1); %></a>
            </li>
            <% } %>

            <!-- add next button -->
            <% if (page != Math.ceil(bots.length / 10) && bots.length > 0) { %>
            <li class="page-item">
              <a href="/allbots/<%= req.params.tag %>?page=<%= Number(page)+ Number(1); %>" class="page-link"><i class="bx bx-chevron-right"></i>
              </a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
              <a class="page-link"><i class="bx bx-chevron-right ms-1 me-n1"></i>
              </a>
            </li>
            <% } %>
            <% if (page != Math.ceil(bots.length / 10) && bots.length > 0) { %>
            <li class="page-item">
              <a href="/allbots/<%= req.params.tag %>?page=<%= Math.ceil(bots.length / 10); %>" class="page-link"><i class="bx bx-chevrons-right"></i></a>
            </li>
            <% } else { %>
            <li class="page-item disabled">
              <a class="page-link"><i class="bx bx-chevrons-right"></i>
              </a>
            </li>
            <% } %>
          </ul>
        </nav>

        <ul class="nav nav-tabs mb-3">
          <% tags.sort((a, b) => b.count - a.count).map(t => { %>
          <li class="nav-item">
            <a href="/bots/<%= t.tag %>" class="nav-link"><%= t.tag %> <span class="badge bg-faded-primary text-primary mx-1"><%= t.count %></span></a>
          </li>
          <% }) %>
        </ul>
      </div>


    </section>




    <%- include('../partials/footer') %>
</body>

</html>
